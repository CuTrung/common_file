ARG VERSION=latest
FROM postgres:${VERSION}

ARG POSTGRES_USER=username
ENV POSTGRES_USER=${POSTGRES_USER}
ARG POSTGRES_PASSWORD=password
ENV POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
ARG POSTGRES_DB=db_test
ENV POSTGRES_DB=${POSTGRES_DB}

ARG POSTGRES_REPLICATION_USER=repluser
ENV POSTGRES_REPLICATION_USER=${POSTGRES_REPLICATION_USER}
ARG POSTGRES_REPLICATION_PASSWORD=replpassword
ENV POSTGRES_REPLICATION_PASSWORD=${POSTGRES_REPLICATION_PASSWORD}

EXPOSE 5432